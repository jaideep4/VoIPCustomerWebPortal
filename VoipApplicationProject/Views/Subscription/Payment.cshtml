@model VoipApplicationProject.Models.PaymentModel

@{
    ViewData["Title"] = "Payment";
}
    <div class="container" style="background-color:lightblue; width :400px; margin-left:500px;margin-top:40px; border:2px solid blue">
        <h1>Payment</h1>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Payment" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" id="i1" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Card_No" class="control-label"></label>
                        <input asp-for="Card_No" class="form-control" />
                        <span asp-validation-for="Card_No" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Expiry_Date" class="control-label"></label>
                        <input asp-for="Expiry_Date" class="form-control" />
                        <span asp-validation-for="Expiry_Date" class="text-danger"></span>
                    </div>
                        <div class="form-group" style="width:300px">
                            <input type="submit" value="PAY" style="background-color:green" />
                        </div>
                </form>
            </div>
        </div>
    </div>


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }



